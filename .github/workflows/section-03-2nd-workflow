# yaml-language-server: $schema=https://json.schemastore.org/github-workflow.json
name: "S03-WF2: Deploy Project"

on: push

defaults:
  run:
    working-directory: ./section-02

jobs:
  context:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Code
        uses: actions/checkout@v3
      - name: Show
        run: echo "${{ toJSON(github) }}"
  test:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Code
        uses: actions/checkout@v3
      - name: Install NodeJS
        uses: actions/setup-node@v3
        with:
          node_version: 20
      - name: Install Dependencies
        run: npm ci
      - name: Run Tests
        run: npm test
  deploy:
    runs-on: ubuntu-latest
    needs: test
    steps:
      - name: Checkout Code
        uses: actions/checkout@v3
      - name: Install NodeJS
        uses: actions/setup-node@v3
        with:
          node_version: 20
      - name: Install Dependencies
        run: npm ci
      - name: Run Build
        run: npm run build
      - name: Deploy
        run: echo Deploying...
